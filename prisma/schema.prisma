// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
}


model Jobs {
  id            Int       @id @default(autoincrement())
  company       String
  logo          String
  logoBackground String
  position      String
  postedAt      String
  contract      String
  location      String
  website       String
  apply         String
  description   String
  requirementContent String
  requirementsItem   String[]
  roleContent        String
  rolesItem          String[]
  applications       Application[]
}

model Application {
  id       Int      @id @default(autoincrement())
  email    String   
  fullName String     
  city     String
  phone    String
  job      Jobs     @relation(fields: [jobId], references: [id])
  jobId    Int      
}
